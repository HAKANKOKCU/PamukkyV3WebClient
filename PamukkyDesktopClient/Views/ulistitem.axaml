<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="60"
             x:Class="PamukkyDesktopClient.Views.ulistitem">
	<ToggleButton Name="mtn" HorizontalAlignment="Stretch" Padding="0" Background="Transparent">
		<DockPanel Height="60">
			<Panel>
				<Border CornerRadius="40" ClipToBounds="True" Height="40" Margin="3" Background="Gray">
					<Image Name="pfp" Width="40" Height="40"></Image>
				</Border>
				<Border IsVisible="False" Background="Lime" Name="onlinedot" CornerRadius="4" Width="8" Height="8" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0 0 5 10"></Border>
			</Panel>
			<StackPanel Margin="4">
				<DockPanel>
					<Label Name="mtime" FontSize="12" Padding="0 5 5 0" VerticalAlignment="Center" DockPanel.Dock="Right">00:00</Label>
					<Label Name="uname" Padding="5">Name</Label>
				</DockPanel>
				<Label Name="mcontent" Margin="2 5 0 0" FontSize="11">Message</Label>
			</StackPanel>
		</DockPanel>
	</ToggleButton>
</UserControl>
